<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="//media.twiliocdn.com/sdk/quickstart/conversations-quickstart.min.css">
    <style>
        #local-media > div {
             width: 270px;
            height: 202px;
            border: 1px solid #cececc;
            box-sizing: border-box;
            background-image: url(data:image/svg+xml;base64,);
            background-position: center;
            background-repeat: no-repeat;
            margin: 0 auto
        }

        #local-media > div video {
            max-width: 100%;
            max-height: 100%;
            border: none
        }

         #remote-media > div {
            height: 43%;
            width: 100%;
            background-color: #fff;
            text-align: center;
            margin: auto
        }

        #remote-media > div video {
            border: 1px solid #272726;
            margin: 3em 2em;
            height: 70%;
            max-width: 27%!important;
            background-color: #272726;
            background-repeat: no-repeat
        }
    </style>
</head>
<body>
    @RenderBody()
    <script src="//media.twiliocdn.com/sdk/js/common/v0.1/twilio-common.min.js"></script>
    <script src="//media.twiliocdn.com/sdk/js/conversations/v0.13/twilio-conversations.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0/angular.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
